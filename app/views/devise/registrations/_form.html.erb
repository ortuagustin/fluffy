<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.text_field :username, class: 'input is-medium', autofocus: true, placeholder: (t 'registration_form.username_field') %>

      <span class='icon is-left'>
        <%= fa_icon 'user' %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.email_field :email, class: 'input is-medium', placeholder: (t 'registration_form.email_field') %>

      <span class='icon is-left'>
        <%= fa_icon 'envelope' %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.email_field :email_confirmation, class: 'input is-medium', placeholder: (t 'registration_form.email_confirmation_field') %>

      <span class='icon is-left'>
        <%= fa_icon 'envelope' %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.password_field :password, class: 'input is-medium', placeholder: (t 'registration_form.password_field') %>

      <span class='icon is-left'>
        <%= fa_icon 'key' %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-icons-left">
      <%= f.password_field :password_confirmation, class: 'input is-medium', placeholder: (t 'registration_form.password_confirmation_field') %>

      <span class='icon is-left'>
        <%= fa_icon 'key' %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control has-text-centered">
      <%= f.submit (t 'registration_form.submit'), class: 'button is-info is-medium' %>
    </div>
  </div>
<% end %>
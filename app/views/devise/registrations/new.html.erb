<div class="authform">
  <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :role => 'form'}) do |f| %>
    <h4 class="text-center"> <%= t 'registration_form.title' %> </h4>
      <%= f.input :username, input_html: { :autofocus => true, class: 'form-control' }, label: (t 'registration_form.username_field') %>
      <%= f.input :email, input_html: { class: 'form-control' }, label: (t 'registration_form.email_field') %>
      <%= f.input :email_confirmation, input_html: { class: 'form-control' }, label: (t 'registration_form.email_confirmation_field') %>
      <%= f.input :password, required: true, input_html: { class: 'form-control', autocomplete: 'off' }, label: (t 'registration_form.password_field') %>
      <%= f.input :password_confirmation, required: true, input_html: { class: 'form-control', autocomplete: 'off' }, label: (t 'registration_form.password_confirmation_field') %>
      <%= f.submit (t 'registration_form.submit'), class: 'button expand' %>
  <% end %>
</div>

<% if current_user.liked? likeable %>
  <%= fa_button 'times',
      (t 'posts.actions.unlike'),
      like_course_post_path(course.id, likeable.id), method: :delete,
      size: 20,
      class: 'is-danger',
      rounded: true
  %>
<% else %>
  <%= fa_button 'thumbs-up',
      (t 'posts.actions.like'),
      like_course_post_path(course.id, likeable.id), method: :post,
      size: 20,
      class: 'is-info',
      rounded: true
  %>
<% end %>
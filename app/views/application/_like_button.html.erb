<% if current_user.liked? likeable %>
  <%= fa_button 'times',
      (t 'actions.unlike'),
      likeable.like_path, method: :delete,
      size: local_assigns.fetch(:icon_size, 20),
      class: "#{local_assigns.fetch :button_size, ''} is-danger",
      rounded: true
  %>
<% else %>
  <%= fa_button 'thumbs-up',
      (t 'actions.like'),
      likeable.like_path, method: :post,
      size: local_assigns.fetch(:icon_size, 20),
      class: "#{local_assigns.fetch :button_size, ''} is-info",
      rounded: true
  %>
<% end %>
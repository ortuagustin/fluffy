<% if current_user.disliked? likeable %>
  <%= fa_button 'times',
      (t 'actions.undislike'),
      likeable.dislike_path, method: :delete,
      size: local_assigns.fetch(:icon_size, 20),
      class: "#{local_assigns.fetch :button_size, ''} is-danger",
      rounded: true
  %>
<% else %>
  <%= fa_button 'thumbs-down',
      (t 'actions.dislike'),
      likeable.dislike_path, method: :post,
      size: local_assigns.fetch(:icon_size, 20),
      class: "#{local_assigns.fetch :button_size, ''} is-info",
      rounded: true
  %>
<% end %>
<%= back_link_path course_tests_path(course_id) %>
<%= render 'title' %>

<%= simple_form_for [course, @test] do |f| %>
  <%= f.error_notification %>
  <%= f.input :title, required: true %>
  <%= f.date_select :evaluated_at, { :order => [ :day, :month ], discard_year: true } %>
  <%= f.input :passing_score, required: true, as: :integer, collection: 1..10, input_html: { min: 0, max: 10 } %>
  <%= f.button :submit %>
<% end %>
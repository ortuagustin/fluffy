<div class="box is-marginless">
  <article class="media">
    <div class="media-left">
      <p class="has-text-weight-bold"> @<%= post.user.username %> </p>

      <figure class="image is-64x64" style="margin-top: 5px;">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>

    <div class="media-content">
      <div class="content">
        <div class="level">
          <div class="level-left">
            <% if post.is_sticky? %>
              <div class="level-item">
                <p class="subtitle has-text-grey"> <%= fa_icon 'thumb-tack' %> </p>
              </div>
            <% end %>

            <div class="level-item">
              <p class="subtitle is-6">
                <%= link_to post.title, course_post_path(course_id, post) %>
              </p>
            </div>
          </div>

          <div class="level-right">
            <div class="level-item">
              <p class="has-text-weight-light"> <%= t('posts.like_score', score: post.like_score) %> </p>
            </div>

            <div class="level-item">
              <p class="has-text-weight-light"> <%= t('posts.replies_count', count: post.replies_count) %> </p>
            </div>

            <div class="level-item">
              <p class="has-text-weight-light"> <%= time_since_posted(post) %> </p>
            </div>
          </div>
        </div>

        <p> <%= post_body(post, truncate_body) %> </p>

        <div class="level">
          <div class="level-left"> </div>

          <% unless policy(post).owner? %>
            <div class="level-right">
              <div class="level-item">
                <%= render partial: 'like_button', locals: { likeable: post } %>
              </div>

              <div class="level-item">
                <%= render partial: 'dislike_button', locals: { likeable: post } %>
              </div>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </article>
</div>